{
  "format_version": "1.8.0",
  "animations": {
    "animation.terminator.look_at_target": {
      "loop": true,
      "bones": {
        "head": {
          "relative_to": {
            "rotation": "entity"
          },
          "rotation": [
            "q.target_x_rotation - this",
            "q.target_y_rotation - this",
            0.0
          ]
        },
        "hat": {
          "relative_to": {
            "rotation": "entity"
          },
          "rotation": [
            "q.target_x_rotation - this",
            "q.target_y_rotation - this",
            0.0
          ]
        }
      }
    },
    "animation.terminator.sitting": {
      "loop": true,
      "bones": {
        "root": {
          "position": [0.0, -4.0, 0.0]
        }
      }
    },
    "animation.humanoid.charging.v1.0": {
      "loop": true,
      "bones": {
        "rightarm": {
          "rotation": ["22.5 * variable.charge_amount - this", "-this", 0.0]
        }
      }
    },
    "animation.terminator.shield_block_main_hand": {
      "loop": true,
      "bones": {
        "rightarm": {
          "rotation": [-20.0, -30.0, -25.0]
        },
        "rightitem": {
          "position": [-1.0, -3.0, 0.0],
          "rotation": [0.0, -60.0, -45.0]
        }
      }
    },
    "animation.terminator.shield_block_off_hand": {
      "loop": true,
      "bones": {
        "leftarm": {
          "rotation": [-20.0, 20.0, 20.0]
        },
        "leftitem": {
          "position": [1.0, -3.0, 0.0],
          "rotation": [0.0, 70.0, 65.0]
        }
      }
    }
  }
}
